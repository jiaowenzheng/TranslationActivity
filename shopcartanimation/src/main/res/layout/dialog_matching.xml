<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/iv_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_first_title"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1"
        />

    <View
        android:id="@+id/mask_white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="@id/iv_text_size"
        app:layout_constraintRight_toRightOf="@id/iv_text_size"
        app:layout_constraintTop_toTopOf="@id/iv_text_size"
        app:layout_constraintBottom_toBottomOf="@id/iv_text_size"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:scaleY="0.8"
        android:scaleX="0.8"
        android:layout_marginTop="40dp"
        app:civ_border_color="@color/color_7264F9"
        app:civ_border_width="2.5dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintTop_toBottomOf="@id/iv_text_size"
        app:layout_constraintRight_toRightOf="parent"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_marginTop="40dp"
        android:scaleY="0.8"
        android:scaleX="0.8"
        app:civ_border_color="@color/color_7264F9"
        app:civ_border_width="2.5dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_text_size" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="斯嘉丽约翰逊与你互相纠缠"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar_left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="开启聊天"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:background="@color/black"
        android:gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintDimensionRatio="h,1:0.2"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_msg"
        />

</androidx.constraintlayout.widget.ConstraintLayout>